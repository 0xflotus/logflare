<div class="subhead ">
  <div class="container mx-auto">
    <h5>~/endpoints/new</h5>
    <div class="log-settings">
      <ul>
        <li></li>
      </ul>
    </div>
  </div>
</div>
<div class="container mx-auto">
  <p>
  </p>
  <%= form_for @changeset, Routes.endpoints_path(@conn, :create), fn f -> %>
  <div class="form-group">
    <%= text_input f, :name, placeholder: "YourApp.EndpointName", class: "form-control form-control-margin", autofocus: true %>
    <%= error_tag f, :name %>
    <small class="form-text text-muted">
      Don't worry, you can change the name later.
    </small>

    <%= textarea f, :query, placeholder: "", class: "form-control form-control-margin", autofocus: true %>
    <%= error_tag f, :query %>
    <small class="form-text text-muted">
      You can change the query later as well.
    </small>

    <div class="form-control form-control-margin">
      <%= checkbox f, :sandboxable, autofocus: true %>
      <label for="query_sandboxable">Allow passing sandboxable queries</label>
    </div>
    <small class="form-text text-muted">
      You can turn this on and off later.
    </small>


  </div>
  <%= submit "Add endpoint", class: "btn btn-primary form-button" %>
  <% end %>
</div>
