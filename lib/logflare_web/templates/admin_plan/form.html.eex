<%= form_for @changeset, @action, fn f -> %>
<div class="form-group">
  <%= label f, :name, class: "label-padding" %>
  <%= text_input f, :name, placeholder: "Great plan", class: "form-control form-control-margin", autofocus: true %>
  <%= error_tag f, :name %>
  <%= label f, :stripe_id, class: "label-padding" %>
  <%= text_input f, :stripe_id, placeholder: "stripe id", class: "form-control form-control-margin" %>
  <%= error_tag f, :stripe_id %>
  <%= label f, :period, class: "label-padding" %>
  <%= text_input f, :period, placeholder: "`month` or `year`", class: "form-control form-control-margin" %>
  <%= error_tag f, :period %>
  <%= label f, :price, class: "label-padding" %>
  <%= text_input f, :price, placeholder: "2000 is $20", class: "form-control form-control-margin" %>
  <%= error_tag f, :price %>
  <%= label f, "Source Limit", class: "label-padding" %>
  <%= text_input f, :limit_sources, placeholder: "", class: "form-control form-control-margin" %>
  <%= error_tag f, :limit_sources %>
  <%= label f, "Account Rate Limit (per second)", class: "label-padding" %>
  <%= text_input f, :limit_rate_limit, placeholder: "per second", class: "form-control form-control-margin" %>
  <%= error_tag f, :limit_rate_limit %>
  <%= label f, "Source Rate Limit (per second)", class: "label-padding" %>
  <%= text_input f, :limit_source_rate_limit, placeholder: "per second", class: "form-control form-control-margin" %>
  <%= error_tag f, :limit_source_rate_limit %>
  <%= label f, "Alerts Every (milliseconds)", class: "label-padding" %>
  <%= text_input f, :limit_alert_freq, placeholder: "milliseconds", class: "form-control form-control-margin" %>
  <%= error_tag f, :limit_alert_freq %>
  <%= label f, "Saved Searches (per source)", class: "label-padding" %>
  <%= text_input f, :limit_saved_search_limit, placeholder: "8", class: "form-control form-control-margin" %>
  <%= error_tag f, :limit_saved_search_limit %>
  <%= label f, "Team Users", class: "label-padding" %>
  <%= text_input f, :limit_team_users_limit, placeholder: "1", class: "form-control form-control-margin" %>
  <%= error_tag f, :limit_team_users_limit %>
  <%= label f, "Source Fields", class: "label-padding" %>
  <%= text_input f, :limit_source_fields_limit, placeholder: "1", class: "form-control form-control-margin" %>
  <%= error_tag f, :limit_source_fields_limit %>
  <%= label f, "Source TTL", class: "label-padding" %>
  <%= text_input f, :limit_source_ttl, placeholder: "", class: "form-control form-control-margin" %>
  <%= error_tag f, :limit_source_ttl %>
  <%= hidden_input f, :id %>
</div>
<%= submit "Submit", class: "btn btn-primary form-button" %>
<% end %>
